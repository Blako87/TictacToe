<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TicTacToeFancy.ViewModels"
        xmlns:views="using:TicTacToeFancy.Views"
        x:Class="TicTacToeFancy.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="RootWindow"
        Title="Tic Tac Toe  //  Galactic Arena"
        Width="980"
        Height="820"
        MinWidth="800"
        MinHeight="700"
        WindowStartupLocation="CenterScreen">

  <ContentControl Content="{Binding CurrentView}">
    <ContentControl.DataTemplates>
        
      <DataTemplate DataType="{x:Type vm:MainWindowViewModel}">
        <views:GameView/>
      </DataTemplate>
      
      <DataTemplate DataType="{x:Type vm:LeaderboardViewModel}">
        <views:LeaderboardView/>
      </DataTemplate>
      
    </ContentControl.DataTemplates>
  </ContentControl>

</Window>
